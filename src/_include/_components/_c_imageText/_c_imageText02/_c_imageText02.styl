//- コンポーネント - 画像+テキストコンポーネント02
.c-imageText02
	PADDING = 20px

	&.is-imageRight
		+MQ_PC(SP_RES_WID)
			.block
				&.is-image
						float right
						padding-left PADDING

	&.is-imageLeft
		+MQ_PC(SP_RES_WID)
			.block
				&.is-image
						float left
						padding-right PADDING
	
	.group
		&.is-before
			margin-bottom 30px
		&.is-primary
			+MQ_PC(SP_RES_WID)
				CF()
		&.is-after
			margin-top 30px
			
			
	.block
		// wysiwyg用
		m-defaultTag()
		&.is-image
			+MQ_SP(SP_RES_WID)
				width 100%
				margin-bottom 10px
				padding 0
			
			.m-imageSet01
				+MQ_SP(SP_RES_WID)
					width 100%
				img
					max-width inherit
					+MQ_SP(SP_RES_WID)
						max-width 100%
		&.is-text
			width 100%
	

	.area
		margin-bottom 10px
		&:last-child
			margin-bottom 0
		&.is-sub
			fontSize(12)