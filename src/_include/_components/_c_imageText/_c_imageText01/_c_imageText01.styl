//- コンポーネント - 画像+テキストコンポーネント01
.c-imageText01
	PADDING = 20px

	&.is-imageRight
		+MQ_PC(SP_RES_WID)
			justify-content space-between
			.block
				&.is-image
					order 1
					padding-left PADDING
	&.is-imageLeft
		+MQ_PC(SP_RES_WID)
			.block
				&.is-image
					padding-right PADDING

	.group
		&.is-before
			margin-bottom 30px
		&.is-primary
			+MQ_PC(SP_RES_WID)
				display flex
		&.is-after
			margin-top 30px

	.block
		// wysiwyg用
		m-defaultTag()
		&.is-image
			+MQ_SP(SP_RES_WID)
				width 100%
				margin-bottom 10px
				padding 0

			.m-imageSet01
				+MQ_SP(SP_RES_WID)
					width 100%
				img
					max-width inherit
					+MQ_PC(SP_RES_WID)
						width inherit
					+MQ_SP(SP_RES_WID)
						max-width 100%
		&.is-text
			width 100%

	.area
		margin-bottom 10px
		&:last-child
			margin-bottom 0
		&.is-sub
			fontSize(12)