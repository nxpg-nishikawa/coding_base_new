mixin m-btnSet01(tg)
	-
		var op = {
			tag:       tg.tag ? tg.tag : "div",
			baseName:  tg.baseName ? tg.baseName : "m-btnSet01",
			className: tg.className ? tg.className : "",
			url:       tg.url ? tg.url : "",
			blank:     tg.blank ? tg.blank : "",
			text:      tg.text ? tg.text : "ボタン"
		}
	
	#{op.tag}( class = op.baseName+op.className )
		if(op.blank=="_blank")
			a(href= op.url target="_blank")
				span.btnWrapper
					span.btnInner!= op.text
		else
			a(href= op.url)
				span.btnWrapper
					span.btnInner!= op.text
